<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0ffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/a_shapes"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/combinationPlayerImageView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.69"
            android:src="@drawable/dragon" />

        <LinearLayout
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.78"
            android:background="@drawable/a_shapes"
            android:orientation="vertical"
            android:padding="4dp" >

            <TextView
                android:id="@+id/combination_No_TitleText"
                style="@style/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_shapes_2"
                android:text="@string/monster_no" />

            <TextView
                android:id="@+id/combination_No_ContentText"
                style="@style/context"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_shapes_3"
                android:text="001" />

            <TextView
                android:id="@+id/combination_Name_TitleText"
                style="@style/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_shapes_2"
                android:text="@string/monster_name" />

            <TextView
                android:id="@+id/combination_Name_ContetText"
                style="@style/context"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_shapes_3"
                android:text="ドラゴン" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.78"
            android:background="@drawable/a_shapes"
            android:orientation="vertical"
            android:padding="4dp" >

            <TextView
                android:id="@+id/combination_Lv_TitleText"
                style="@style/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_shapes_2"
                android:text="@string/monster_Lv" />

            <TextView
                android:id="@+id/combination_LV_ContetText"
                style="@style/context"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_shapes_3"
                android:text="Lv1" />

            <TextView
                android:id="@+id/combination_Status_TitleText"
                style="@style/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_shapes_2"
                android:text="@string/monster_stastus" />

                <TextView
                    android:id="@+id/combination_Hp_ContetText"
                    style="@style/context"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/a_shapes_3"
                    android:text="HP:100 " />

           
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/a_shapes"
            android:orientation="vertical"
            android:padding="4dp" >

            <TextView
                android:id="@+id/combination_BaseSkill_TitleText"
                style="@style/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_shapes_2"
                android:text="@string/monster_skill" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_shapes_3"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/combination_BaseSkill_ContetText"
                    style="@style/skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/a_shapes_4"
                    android:padding="3dp"
                    android:text="ファイヤーLv1" />
            </LinearLayout>

           
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/a_shapes"
            android:orientation="vertical"
            android:padding="4dp" >

            <TextView
                android:id="@+id/combination_BaseAbility_TitleText"
                style="@style/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_shapes_2"
                android:text="@string/monster_ability" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_shapes_3"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/combination_BaseAbility_ContetText1"
                    style="@style/skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/a_shapes_4"
                    android:padding="3dp"
                    android:text="HPアップ" />

                <TextView
                    android:id="@+id/combination_BaseAbility_ContetText2"
                    style="@style/skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/a_shapes_4"
                    android:padding="3dp"
                    android:text="攻撃力アップ" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/a_shapes"
            android:orientation="vertical"
            android:padding="4dp" >

            <TextView
                android:id="@+id/combination_AddAbility_TitleText"
                style="@style/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_shapes_2"
                android:text="@string/monster_additionalAbility" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a_shapes_3"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/combination_AddAbility_ContetText1"
                    style="@style/skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/a_shapes_4"
                    android:padding="3dp"
                    android:text="ノックバック攻撃Lv1" />

                <TextView
                    android:id="@+id/combination_AddAbility_ContetText2"
                    style="@style/skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/a_shapes_4"
                    android:padding="3dp"
                    android:text="ノックバック攻撃Lv1" />

                <TextView
                    android:id="@+id/combination_AddAbility_ContetText3"
                    style="@style/skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/a_shapes_4"
                    android:padding="3dp"
                    android:text="ノックバック攻撃Lv1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>