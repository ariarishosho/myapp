    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainTabelResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <TableRow>

            <TextView
                android:id="@+id/mainTextResult"
                style="@style/moneyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_span="2"
                android:gravity="center"
                android:text="@string/result"
                android:textSize="20dp"
                android:visibility="visible" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/mainContentTextPocketMoney"
                style="@style/moneyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_span="2"
                android:gravity="center"
                android:text="@string/result"
                android:textSize="30dp"
                android:visibility="visible" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/mainTitleTextGetMonster"
                style="@style/moneyText"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:gravity="center_vertical|left"
                android:text="@string/getMonster"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/mainGetMonsterImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/missImage"
                android:src="@drawable/dragon" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/mainButtonExit"
                style="@style/ButtonText"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_span="2"
                android:background="@drawable/a_shapes_5"
                android:text="@string/Exit"
                android:visibility="visible" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/mainNegoResultMoney"
        style="@style/moneyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center"
        android:layout_margin="2dp"
        android:gravity="center_vertical"
        android:text="@string/negosiationSuccess"
        android:textSize="70dp"
        android:visibility="visible" />

</FrameLayout>