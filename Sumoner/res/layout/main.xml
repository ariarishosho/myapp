    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/mainButtonReStart"
            style="@style/ButtonText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/a_shapes_5"
            android:text="@string/restart"
            android:visibility="visible" />

        <Button
            android:id="@+id/mainButtonGiveUp"
            style="@style/ButtonText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/a_shapes_5"
            android:text="@string/giveup"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/mainTimerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/mainImageTimer"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.51"
                android:background="@null"
                android:src="@drawable/timer" />

            <TextView
                android:id="@+id/mainTextTimer"
                style="@style/timerText"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:text="@string/timer"
                android:visibility="visible" />

