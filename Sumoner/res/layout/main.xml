<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <org.sumoner.com.MainView
        android:id="@+id/MainView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal|top"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/mainImageButtonArrowBack"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="@null"
            android:contentDescription="@string/missImage"
            android:scaleType="fitXY"
            android:src="@drawable/arrowback"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mainTextSecne"
            style="@style/helpText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/a_shapes_6"
            android:gravity="center_horizontal"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/mainImageButtonArrowFront"
             android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="@null"
            android:contentDescription="@string/missImage"
            android:scaleType="fitXY"
           android:src="@drawable/arrowfront"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/mainButtonStart"
            style="@style/ButtonText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/a_shapes_5"
            android:padding="5dp"
            android:text="@string/start"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:orientation="horizontal"
            android:padding="10dp" >

            <Button
                android:id="@+id/mainButtonBattle"
                style="@style/ButtonText"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/a_shapes_5"
                android:padding="5dp"
                android:text="@string/battle"
                android:visibility="visible" />

            <Button
                android:id="@+id/mainButtonPasture"
                style="@style/ButtonText"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/a_shapes_5"
                android:padding="5dp"
                android:text="@string/pasture"
                android:visibility="visible" />

            <Button
                android:id="@+id/mainButtonHelp"
                style="@style/ButtonText"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/a_shapes_5"
                android:padding="5dp"
                android:text="@string/help"
                android:visibility="visible" />
        </LinearLayout>
