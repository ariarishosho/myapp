            android:padding="10dp" >

            <Button
                android:id="@+id/mainButtonCombination"
                style="@style/ButtonText"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
