<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
                android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/itmeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </ImageView>

    <TextView
        android:id="@+id/strDataText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pasture" />

    <TextView
        android:id="@+id/strDataText1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/pasture"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/strDataText2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/pasture"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/intgerDataText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/pasture"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/intgerDataText1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/pasture"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/intgerDataText2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/pasture"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/boolDataCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/boolDataCheckbox1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/boolDataCheckbox2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:visibility="invisible" />

</LinearLayout>