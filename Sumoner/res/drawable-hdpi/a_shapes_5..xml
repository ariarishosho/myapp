<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <gradient android:angle="90" android:endColor="#CBF1A2" android:startColor="#9EE33B" />

            <padding android:bottom="10dip" android:left="0dip" android:right="0dip" android:top="10dip" />

            <stroke android:width="3dip" android:color="#80D580" />

            <corners android:radius="2dp" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <gradient android:angle="90" android:endColor="#CBF1A2" android:startColor="#9EE33B" />

            <padding android:bottom="10dip" android:left="0dip" android:right="0dip" android:top="10dip" />

            <stroke android:width="3dip" android:color="#80D580" />

            <corners android:radius="2dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <gradient android:angle="90" android:endColor="#A9E665" android:startColor="#80BF2B" />

            <padding android:bottom="10dip" android:left="0dip" android:right="0dip" android:top="10dip" />

            <corners android:radius="2dp" />

            <stroke android:width="3dip" android:color="#339933" />
        </shape></item>

</selector>